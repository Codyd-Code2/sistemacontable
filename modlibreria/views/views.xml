<odoo>
  <data>

    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="modlibreria.list">
      <field name="name">modlibreria list</field>
      <field name="model">modlibreria.modlibreria</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="product_exist_form">
          <field name="name">modlibreria form</field>
          <field name="model">modlibreria.modlibreria</field>
          <field name="arch" type="xml">
              <form string="Producto">
                  <sheet>
                    <field name="name" placeholder="valor" />
                      <group name="group_top">
                          <!--columna de la izquierda-->
                          <group name="group_left">
                              <!---->
                              <field name="value"  />

                          </group>
                          <!--columna de la derecha-->
                          <group name="group_right">
                              <field name="value2"  />
                              <field name="value3"  />
                          </group>
                      </group>
                  </sheet>
              </form>
          </field>
        </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="modlibreria.action_window">
      <field name="name">modlibreria window</field>
      <field name="res_model">modlibreria.modlibreria</field>
      <field name="view_mode">tree,form</field>
    </record>




    <!-- Top menu item -->

    <menuitem name="modlibreria" id="modlibreria.menu_root" web_icon="modlibreria,static/src/img/icon.png" />

    <!-- menu categories -->

    <menuitem name="Menu 1" id="modlibreria.menu_1" parent="modlibreria.menu_root" action="modlibreria.action_window"/>

    <!-- actions -->
<!--
    <menuitem name="List" id="modlibreria.menu_1_list" parent="modlibreria.menu_1"
              action="modlibreria.action_window"/>
    <menuitem name="Server to list" id="modlibreria" parent="modlibreria.menu_2"
              action="modlibreria.action_server"/>
-->
  </data>
</odoo>